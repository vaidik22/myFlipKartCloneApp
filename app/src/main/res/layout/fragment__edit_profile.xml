<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_icon_2"
                app:civ_border_color="#808080" />

            <ImageButton
                android:id="@+id/chooseImageButton"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|end"
                android:background="@drawable/edit_pen_2" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout_1"
        tools:layout_editor_absoluteX="15dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta_regular"
            android:layout_below="@id/chooseImageButton"
            android:hint="Name" />

        <EditText
            android:id="@+id/edit_Text_Name"
            android:layout_width="match_parent"
            style="@style/CustomEditTextStyle"
            android:fontFamily="@font/mukta_regular"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_view">

        </EditText>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta_regular"
            android:layout_below="@id/nameTextView"
            android:hint="Username" />

        <EditText
            android:id="@+id/edit_Text_Username"
            android:layout_width="match_parent"
            style="@style/CustomEditTextStyle"
            android:background="@drawable/recycler_view"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta_regular">

        </EditText>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="SUBMIT"
            android:background="@drawable/square_button_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
